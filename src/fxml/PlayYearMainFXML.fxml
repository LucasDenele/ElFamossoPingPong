<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PlayYearController">
   <ImageView fitHeight="400.0" fitWidth="606.0" layoutX="-2.0" opacity="0.4" pickOnBounds="true">
      <Image url="@PingPongBackground.jpg" />
   </ImageView>
   <Label layoutX="248.0" layoutY="14.0" text="Play Year">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   <Button fx:id="backToMainMenuButton" layoutX="24.0" layoutY="23.0" mnemonicParsing="false" onAction="#backToMainMenu" text="Back" />
   <Label fx:id="textLabel" layoutX="120.0" layoutY="142.0" text="Are you sure to launch a year ?">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   <Button fx:id="launchYearButton" layoutX="83.0" layoutY="212.0" mnemonicParsing="false" onAction="#launchYear" prefHeight="50.0" prefWidth="74.0" text="Yes">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Button>
   <Button fx:id="noButton" layoutX="430.0" layoutY="212.0" mnemonicParsing="false" onAction="#backToMainMenu" prefHeight="50.0" prefWidth="74.0" text="No">
      <font>
         <Font name="System Bold" size="21.0" />
      </font></Button>
   <ProgressBar fx:id="yearProgressBar" layoutX="201.0" layoutY="294.0" prefWidth="200.0" progress="0.0" />
   <Button fx:id="launchRankingButton" layoutX="57.0" layoutY="205.0" mnemonicParsing="false" onAction="#launchRanking" prefHeight="65.0" prefWidth="127.0" text="Ranking">
      <font>
         <Font name="System Bold" size="21.0" />
      </font>
   </Button>
   <Button fx:id="launchSummaryButton" layoutX="404.0" layoutY="205.0" mnemonicParsing="false" onAction="#summaryLaunch" prefHeight="65.0" prefWidth="127.0" text="Summary">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Button>
</AnchorPane>
